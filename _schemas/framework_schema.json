{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["groups", "version"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "practices"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Z]$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "practices": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "description", "tasks"],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[A-Z]\\.[0-9]+$"
                },
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "description": {
                  "type": "string",
                  "minLength": 1
                },
                "tasks": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id", "name", "definition", "objective", "questions"],
                    "properties": {
                      "id": {
                        "type": "string",
                        "pattern": "^[A-Z]\\.[0-9]+\\.[0-9]+$"
                      },
                      "name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "definition": {
                        "type": "string",
                        "minLength": 1
                      },
                      "objective": {
                        "type": "string",
                        "minLength": 1
                      },
                      "questions": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": ["id", "text"],
                          "properties": {
                            "id": {
                              "type": "string",
                              "pattern": "^[A-Z]\\.[0-9]+\\.[0-9]+\\.[0-9]+$"
                            },
                            "text": {
                              "type": "string",
                              "minLength": 1
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
} 